{
    "name": "Messenger",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "hostRequirements": {
        "cpus": 2
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest"
        }
    },
    "waitFor": "onCreateCommand",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "ritwickdey.LiveServer"
            ]
        }
    }
}